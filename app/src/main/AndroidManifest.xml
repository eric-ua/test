<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="toys.miniwooden.vzuklontest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".UklonTestApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.PostsListActivity"
            android:label="@string/title_activity_posts_list"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.PostCommentsActivity"
            android:label="@string/title_activity_post_comments"
            android:theme="@style/AppTheme" />
    </application>

</manifest>